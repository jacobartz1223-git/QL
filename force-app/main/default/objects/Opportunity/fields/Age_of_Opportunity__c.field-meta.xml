<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Age_of_Opportunity__c</fullName>
    <description>Displays the Age of an Opportunity by checking whether Opportunity is Closed or not</description>
    <externalId>false</externalId>
    <formula>If(IsClosed,CloseDate - DATEVALUE(CreatedDate),DATEVALUE(Now())- DATEVALUE(CreatedDate))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Age (In Days)</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
